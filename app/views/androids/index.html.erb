<h1>Listing androids</h1>

<table>
  <tr>
    <th>통신사</th>
    <th>제조사</th>
    <th>펫네임</th>
    <th>모델명</th>
    <th>버전(출시)</th>
    <th>버전(현재)</th>
    <th>인치</th>
    <th>해상도</th>
    <th>대각px</th>
    <th>PPI</th>
    <th>OS DPI</th>
    <th>화면 종류</th>
    <th>키보드</th>
    <th>출시년</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @androids.each do |android| %>
  <tr>
    <td><%= android.carrier %></td>
    <td><%= android.maker %></td>
    <td><%= android.petname %></td>
    <td><%= android.modelname %></td>
    <td><%= android.os_ver_start %></td>
    <td><%= android.os_ver_current %></td>
    <td><%= android.screen_inch %></td>
    <td><%= android.screen_x %>x<%= android.screen_y %></td>
    <td><%= Math.sqrt(android.screen_x**2 + android.screen_y**2).to_i %></td>
    <td><%= (Math.sqrt(android.screen_x**2 + android.screen_y**2)/android.screen_inch).to_i %></td>
    <td><%= android.screen_dpi %></td>
    <td><%= android.screen_type %></td>
    <td><%= android.keyboard %></td>
    <td><%= android.release_date.strftime("%Y") %></td>
    <td><%= link_to 'Show', android %></td>
    <td><%= link_to 'Edit', edit_android_path(android) %></td>
    <td><%= link_to 'Destroy', android, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

